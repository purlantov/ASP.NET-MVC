@using PagedList.Mvc
@model PagedList.IPagedList<RolandDG.Web.ViewModels.Product.ImpactPrinterViewModel>

@{
    ViewBag.Title = "Impact Printers";
}

<h2>@ViewBag.Title</h2>

@foreach (var impactPrinters in Model)
{
    <div class="row">
        <div class="col-md-7">
            <a href="@Url.Action("ImpactPrinter", "Product",  new { impactPrinters.Id }, null)">
                <img class="img-fluid rounded mb-3 mb-md-0" src="~/Images/impact-printers.jpg" style="width: 100%" alt="">
            </a>
        </div>
        <div class="col-md-5">
            <h3>Roland @impactPrinters.Model</h3>
            <p>Category: @impactPrinters.ProductType</p>
            <a class="btn btn-primary" href="@Url.Action("ImpactPrinter", "Product",  new { impactPrinters.Id }, null)">View Product</a>
        </div>

    </div>
    <hr />
}

<div align="center">
    @Html.PagedListPager(Model, page => Url.Action("ImpactPrinters", new { page }))
</div>