@using Microsoft.Ajax.Utilities
@using Roland.Data.Model
@model RolandDG.Web.ViewModels.Product.VinylCutterViewModel
<div>Update Vinyl Cutter</div>
@*@using (Html.BeginForm("AddPrinter", "Product"))*@
@using (Ajax.BeginForm("UpdateCutter", "Admin",
                                                           new AjaxOptions
                                                           {
                                                               HttpMethod = "POST",
                                                               UpdateTargetId = "content",
                                                               InsertionMode = InsertionMode.Replace,
                                                               OnComplete = "ParsUnob"
                                                           }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model)
    </div>
    <div class="hidden">
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CuttingSpeed)
        @Html.TextBoxFor(m => m.CuttingSpeed, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CuttingSpeed)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BladeForce)
        @Html.TextBoxFor(m => m.BladeForce, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BladeForce)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MediaWidth)
        @Html.TextBoxFor(m => m.MediaWidth, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MediaWidth)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function ParsUnob() {
            $.validator.unobtrusive.parse("#content");
        }
    </script>
}


