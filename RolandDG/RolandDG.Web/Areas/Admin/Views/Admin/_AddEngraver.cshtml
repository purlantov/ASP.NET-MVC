@using Microsoft.Ajax.Utilities
@using Roland.Data.Model
@model RolandDG.Web.ViewModels.Product.EngraverViewModel   
@Scripts.Render("~/bundles/jqueryval")

@*@using (Html.BeginForm("AddPrinter", "Product"))*@
@using (Ajax.BeginForm("AddEngraver", "Admin",
                                   new AjaxOptions
                                   {
                                       HttpMethod = "POST",
                                       UpdateTargetId = "content",
                                       InsertionMode = InsertionMode.Replace,
                                       OnComplete = "ParsUnob"
                                   }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
    </div>
    <div class="hidden">
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaxSpeed)
        @Html.TextBoxFor(m => m.MaxSpeed, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaxSpeed, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RPM)
        @Html.TextBoxFor(m => m.RPM, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RPM, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TableWidth)
        @Html.TextBoxFor(m => m.TableWidth, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TableWidth, "", new { @class = "text-danger" })
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TableDepth)
            @Html.TextBoxFor(m => m.TableDepth, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TableDepth, "", new { @class = "text-danger" })
        </div>
                                                         
        <button type="submit" class="btn btn-primary">Save</button>

}
