@using Roland.Data.Model
@model RolandDG.Web.ViewModels.Product.PrinterViewModel
    
<div> Update Printer</div>
@*@using (Html.BeginForm("UpdatePrinter", "Admin"))*@
@using (Ajax.BeginForm("UpdatePrinter", "Admin",
                        new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "admin-container",
                            InsertionMode = InsertionMode.Replace, OnComplete = "ParsUnob" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @{
            var inkType = new List<string>()
                 {
                     "EcoSolvent",
                     "Pigment",
                     "UV",
                     "Sublimation"
                 };
        }
        @Html.LabelFor(m => m.Ink)
        @Html.DropDownListFor(m => m.ProductType, new SelectList(inkType), " ", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ink, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MediaWidth)
        @Html.TextBoxFor(m => m.MediaWidth, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MediaWidth, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PrintHeads)
        @Html.TextBoxFor(m => m.PrintHeads, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PrintHeads, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MaxSpeed)
        @Html.TextBoxFor(m => m.MaxSpeed, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MaxSpeed, "", new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn btn-primary">Save</button>

}

<script>
    function ParsUnob() {
        $.validator.unobtrusive.parse("#content");
    }
</script>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}

